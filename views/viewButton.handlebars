<!DOCTYPE html>
<html lang="en">

<head>

	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, shrink-to-fit=no, initial-scale=1">
	<meta name="description" content="">
	<meta name="author" content="">
	<script src="https://npmcdn.com/babel-core@5.8.38/browser.min.js"></script>
	<title>Simple Sidebar - Start Bootstrap Template</title>

	<!-- Bootstrap Core CSS -->
	<link href="/assets/css/bootstrap.min.css" rel="stylesheet">

	<!-- Custom CSS -->
	<link href="/assets/css/simple-sidebar.css" rel="stylesheet">

	<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

	<div id="wrapper">

		<!-- Sidebar -->
		<div id="sidebar-wrapper">
			<ul class="sidebar-nav">
				<li class="sidebar-brand">
					<a href="#">
                        Button Palooza
                    </a>
				</li>
				<li>
					<a href="/">Home</a>
				</li>
				 {{#if account}}
                 {{#if makePage}}
                <li>
                    <a href="button">Make Button</a> 
                </li>
                {{else}}
                <li>
                    <a href="viewButton">View Button</a>
                </li>
                {{/if}}
                <li>
                    <section id="login">
                            <h2>Welcome, {{account.username}}</h2>
                            <a href="logout">Log Out</a>
                    </section>
                </li>
                {{else}}
                <li>
                    <section id="login">
                    <form id="loginForm" name="loginForm" action="/login" method="POST" class="mainForm">
                        <label for="username">Username: </label>
                        <input id="user" type="text" name="username" placeholder="username"/>
                        <label for="pass">Password: </label>
                        <input id="pass" type="password" name="pass" placeholder="password"/>
                        <input type="hidden" name="_csrf" value={{csrfToken}} />
                        <a id="loginSubmit" href="#" class="formSubmit">Sign in</a>
                     </form>
                     <a href="signup">Sign up</a>
                    </section>
                </li>
                {{/if}}
			</ul>

		</div>
		<div id="toggle-wrapper">

			<div class="arrow-left" id="arrow">
				<!-- idea and code from css-tricks.com -->
			</div>
		</div>
		<!-- /#sidebar-wrapper -->

		<!-- Page Content -->
		<div id="page-content-wrapper">
			<div class="container-fluid">
				<div class="row">
					<div class="col-lg-12">
						<h1>Your {{button.name}} Button!</h1>
						<section id="button">
							<button style="background-color:{{{button.fillColor}}};color:{{{button.textColor}}};border:{{{button.borderWidth}}} solid {{{button.borderColor}}}">{{button.innerText}}</button>	
			    		</section>
                        <h3> You are only allowed one button at a time!</h3>
                        <h1><a href="removeButton">Delete Button</a></h1>
					</div>
				</div>
			</div>
		</div>
		<!-- /#page-content-wrapper -->

	</div>
	<!-- /#wrapper -->

	<!-- jQuery -->
	<script src="/assets/js/jquery.js"></script>

	<!-- Bootstrap Core JavaScript -->
	<script src="/assets/js/bootstrap.min.js"></script>

	<!-- Menu Toggle Script -->
	<script>
    $("#toggle-wrapper").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>
    <script src="/assets/js/constructor.js"></script>
    <script src="/assets/js/ajaxBuddy.js"></script>
</body>

</html>